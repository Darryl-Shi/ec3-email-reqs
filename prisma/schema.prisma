generator client {
  provider = "prisma-kysely"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

model User {
  id               String             @id
  email            String             @unique
  name             String
  pictureUrl       String?
  session          Session[]
  EmailApplication EmailApplication[]
  ResetLink        ResetToken[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailApplication {
  id                       String  @id
  userId                   String
  username                 String
  // domainName            String
  // enablePasswordReset   Boolean
  password                 String?
  recoveryEmail            String
  recoveryEmailDescription String
  recoveryPhone            String?
  recoveryPhoneDescription String?
  approved                 Boolean

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ResetToken {
  id        String   @id
  userId    String
  tokenHash String
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
